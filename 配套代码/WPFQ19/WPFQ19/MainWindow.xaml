<Window x:Class="WPFQ19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFQ19"
        mc:Ignorable="d"
        Title="MainWindow" Height="337" Width="499" WindowStyle="None">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu x:Name="menu">
                <MenuItem Header="文件">
                    <MenuItem Header="打开"/>
                    <MenuItem Header="保存"/>
                    <MenuItem Header="另存为"/>
                </MenuItem>
                <MenuItem Header="编辑">
                    <MenuItem Header="撤回"/>
                    <MenuItem Header="重做"/>
                </MenuItem>
            </Menu>
            <Button Content="X" DockPanel.Dock="Right" Click="Button_Click"/>
            <Label MouseMove="Label_MouseMove"/>
        </DockPanel>
        <DockPanel>
            <TextBlock/>
        </DockPanel>
    </DockPanel>
</Window>
