<Window x:Class="WPF006.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF006"
        mc:Ignorable="d"
        xmlns:dbg="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
       
    </Window.Resources>
    <Grid x:Name="grid">
        <TextBlock Text="{Binding ActualWidth, ElementName=grid, Mode=OneWay,Converter={StaticResource DebugConverter}}"/>
    </Grid>
</Window>
