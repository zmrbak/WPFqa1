        </local:MyButton>-->

        <Button
            x:Name="btn1"
            Grid.Row="1"
            Grid.RowSpan="10"
            Grid.Column="14"
            Grid.ColumnSpan="8"
            Margin="0.4,0.4,0.4,9.6"
            VerticalContentAlignment="Bottom"
            local:ExImage.ImageFile="3452.png"
            Background="White"
            BorderBrush="#FF0C0C0C"
            BorderThickness="1"
            Content="3452"
            FontSize="48"
            Foreground="#FF0C0C0C"
            Template="{DynamicResource ButtonTemplate1}">
            <Button.Effect>
                <DropShadowEffect />
            </Button.Effect>
        </Button>
        <Button
            Grid.Row="17"
            Grid.Column="6"
            Grid.ColumnSpan="4"
            Click="Button_Click"
            Content="34521" />

    </Grid>
</Window>
